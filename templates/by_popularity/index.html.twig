{% extends 'atlas_base.html.twig' %}

{% block body %}

<div>
<h3 class="text-center px-2.5"><i>Browsing by popularity (most viewed first)</i></h3>
</div>

<div class="mx-2.5 grid grid-cols-3 gap-0.5 p-5">

{% for photo in photos %}
    <div class="size-4/5 text-center">
<a href= {{ path('app_entry', {'id': photo.id}) }}><img src={{ asset('images/atlas/'~photo.getFilename~'') }} />
        {{ photo.getTaxon.getGenus.getName }} {{ photo.getTaxon.getSpecies.getName }} {{ photo.getTaxon.getSpecies.getAuthority }} ({{ photo.getTaxon.getSpecies.getDateProposed }}) </a>
    </div>
{% endfor %}

</div>

{% endblock %}
