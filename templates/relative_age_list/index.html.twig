{% extends 'base.html.twig' %}

{% block body %}

<div class="p-2 text-lg lg:text-xl text-gray-700 font-semibold text-center mx-auto lg:py-6">
    <span><i>Select a geological age from the list to explore the taxa</i></span>
</div>

<div class="flex items-center justify-center">
    <div id="upper-panel" data-controller="age-list" class="p-2 grid grid-cols-2 gap-2 lg:grid-cols-3 lg:gap-4 lg:p-5 lg:mx-auto">
        
        {% for age in listOfAges %}
            <div class="text-xl text-gray-700 font-medium">
                <a class="js-age-list" id="age{{ age.getId }}" href="#">
                    <span class="p-2 hover:bg-gray-300 hover:rounded-lg"><i> {{ age.getName }} </i></span>
                </a>
            </div>
        {% endfor %}
    
    </div>
</div>

<div id="lower-panel">
</div>

{% endblock %}
