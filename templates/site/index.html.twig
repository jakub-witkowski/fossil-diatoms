{% if site.getSiteType.getName == 'deep-sea' %}
<div class="text-lg lg:text-xl text-gray-700 font-semibold text-center mx-auto py-4 lg:py-6">
    <span>Displaying taxa from {{ site.getCampaign.getAbbreviation }} Hole {{ site.getNameOrNumberPrimary }}{{ site.getNameOrNumberSecondary }}</span>
</div>

{% elseif site.getSiteType.getName == 'onshore' or site.getSiteType.getName == 'onshore-NHM' %}
<div class="text-lg lg:text-xl text-gray-700 font-semibold text-center mx-auto py-4 lg:py-6">
    <span>Displaying taxa from {{ site.getNameOrNumberPrimary }}{{ site.getNameOrNumberSecondary }}, {{ site.getGeography.getFeatureSecondary }}</span>
</div>

{% elseif site.getSiteType.getName == 'unknown' %}
<div class="text-lg lg:text-xl text-gray-700 font-semibold text-center mx-auto py-4 lg:py-6">
    <span>Displaying taxa from unknown localities</span>
</div>

{% elseif site.getSiteType.getName == 'dredge' %}
<div class="text-lg lg:text-xl text-gray-700 font-semibold text-center mx-auto py-4 lg:py-6">
    <span>Displaying taxa from {{ site.getCampaign.getAbbreviation }} dredging {{ site.getNameOrNumberPrimary }}{{ site.getNameOrNumberSecondary }}</span>
</div>

{% endif %}

<div class="max-sm:pb-2 grid grid-cols-2 gap-2 max-lg:px-2 lg:grid-cols-3 lg:gap-4">
    {% for photo in photos %}
        <div class="text-center text-gray-700 hover:text-gray-500">
            <a href= {{ path('app_entry', {'id': photo.id}) }}>
                <img class="rounded-lg shadow-xl" src={{ asset('images/atlas/'~photo.getFilename~'') }} /></a>

                <div class="text-lg lg:text-xl py-2 lg:py-4">
                    <span class="py-4 text-xl"><i>{{ photo.getTaxon.getGenus.getName }} {{ photo.getTaxon.getSpecies.getName }}</i> {{ photo.getTaxon.getSpecies.getAuthority }} ({{ photo.getTaxon.getSpecies.getDateProposed }})</span>
                </div>
        </div>
    {% endfor %}
</div>