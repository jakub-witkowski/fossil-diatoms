{% extends 'atlas_base.html.twig' %}

{% block body %}

<div class="text-xl text-gray-700 font-semibold text-center mx-auto py-6">
    <span><i>Select a site from the list to view the species</i></span>
</div>

<div class="flex items-center justify-center">
    <div id="upper-panel" data-controller="site-list" class="mx-auto grid grid-cols-3 gap-y-2.5 gap-x-5 p-5">
        
        {% for site in listOfSites %}
            {% if site.getSiteType.getName == 'deep-sea' %}
                <div class="text-xl text-gray-700 font-medium">
                    <a class="js-site-list" id="site{{ site.getId }}" href="#">
                        <span class="p-2 hover:bg-gray-300 hover:rounded-lg">{{ site.getCampaign.getAbbreviation }} Hole {{ site.getNameOrNumberPrimary }}{{ site.getNameOrNumberSecondary }}</span>
                    </a>
                </div>
            
            {% elseif site.getSiteType.getName == 'onshore' or site.getSiteType.getName == 'onshore-NHM' %}
                <div class="text-xl text-gray-700 font-medium">
                    <a class="js-site-list" id="site{{ site.getId }}" href="#">
                        <span class="p-2 hover:bg-gray-300 hover:rounded-lg">{{ site.getNameOrNumberPrimary }}{{ site.getNameOrNumberSecondary }}, {{ site.getGeography.getFeatureSecondary }}</span>
                    </a>
                </div>
            
            {% elseif site.getSiteType.getName == 'unknown' %}
                <div class="text-xl text-gray-700 font-medium">
                    <a class="js-site-list" id="site{{ site.getId }}" href="#">
                        <span class="p-2 hover:bg-gray-300 hover:rounded-lg">Unknown locality</span>
                    </a>
                </div>
            
            {% elseif site.getSiteType.getName == 'dredge' %}
                <div class="text-xl text-gray-700 font-medium">
                    <a class="js-site-list" id="site{{ site.getId }}" href="#">
                        <span class="p-2 hover:bg-gray-300 hover:rounded-lg">{{ site.getCampaign.getAbbreviation }} dredging {{ site.getNameOrNumberPrimary }}{{ site.getNameOrNumberSecondary }}</span>
                    </a>
                </div>
            
            {% endif %}
        {% endfor %}
    
    </div>
</div>

<div id="lower-panel" class="grid grid-cols-3 gap-4 py-6">
</div>

{% endblock %}
