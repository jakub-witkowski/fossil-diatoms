{% extends 'atlas_base.html.twig' %}

{% block body %}

<div>
    <h3 class="text-center px-2.5"><i>Select a site from the list to view the species</i></h3>
</div>

<div class="flex items-center justify-center">
    <div id="upper-panel" data-controller="site-list" class="mx-auto grid grid-cols-3 gap-y-2.5 gap-x-5 p-5">
        
        {% for site in listOfSites %}
            {% if site.getSiteType.getName == 'deep-sea' %}
                <div><a class="js-site-list" id="site{{ site.getId }}" href="#"> {{ site.getCampaign.getAbbreviation }} Hole {{ site.getNameOrNumberPrimary }}{{ site.getNameOrNumberSecondary }} </a></div>
            {% elseif site.getSiteType.getName == 'onshore' %}
                <div><a class="js-site-list" id="site{{ site.getId }}" href="#"> {{ site.getNameOrNumberPrimary }}{{ site.getNameOrNumberSecondary }}, {{ site.getGeography.getFeatureSecondary }} </a></div>
            {% elseif site.getSiteType.getName == 'unknown' %}
                <div><a class="js-site-list" id="site{{ site.getId }}" href="#"> Unknown locality </a></div>
            {% elseif site.getSiteType.getName == 'dredge' %}
                <div><a class="js-site-list" id="site{{ site.getId }}" href="#"> {{ site.getCampaign.getAbbreviation }} dredging {{ site.getNameOrNumberPrimary }}{{ site.getNameOrNumberSecondary }} </a></div>
            {% endif %}
        {% endfor %}
    
    </div>
</div>

<div id="rightColumn" class="mx-2.5 grid grid-cols-3 gap-0.5 p-5">
</div>

{% endblock %}
