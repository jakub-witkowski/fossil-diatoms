{% extends 'atlas_base.html.twig' %}

{% block body %}

<div class=" text-gray-700 font-semibold text-center text-lg pt-2 lg:text-xl lg:mx-auto lg:pt-6">
            <span><i>Search for taxon</i></span>
        </div>

<div class="lg:flex lg:items-top">
    <div>
        <div class="text-gray-700 font-semibold text-left text-lg py-2 mx-2 lg:text-xl lg:w-3/5 lg:mx-auto lg:py-6">
            <span>Enter the name of the genus and species you are looking for:</span>
            <ul>
                <li class="text-lg font-medium py-2">
                    <span>Both fields are mandatory.</span>
                </li>
                <li class="text-lg font-medium py-2">
                    <span>The names have to include at least three letters (only Latin).</span>
                </li>
                <li class="text-lg font-medium py-2">
                    <span>The names cannot include any special characters (e.g., #, &, !, <, >, etc.)</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="mx-2 py-2 lg:w-2/5 lg:mx-auto lg:py-6">
        {{ form_start(taxonForm, {'attr': {'novalidate': false}}) }}
            {{ form_widget(taxonForm) }}
            <div class="flex w-full place-content-end">
                <button type="submit" class="border-2 border-gray-700 bg-gray-700 font-black text-xl text-white hover:text-gray-300 py-2 px-4 rounded-xl">Search</button>
            </div> 
        {{ form_end(taxonForm) }}
    </div>
</div>

{% endblock %}
